<div id="teacher-application-container">
  	<div class="main">
  		<div class="layout-top">
	  		<div class="teacher-application-text">
	  			<h1>WE NEED TEACHERS LIKE YOU</h1>
	  			<p>Illo officiis necessitatibus mollitia reprehenderit consequuntur quia!</p>
	  		</div>
	  		<div class="teacher-registration-form-container">
				<form id="application" role="form">
				  <div class="form-group">
				    <input type="text" class="form-control" id="first" placeholder="First Name">
				  </div>
				  <div class="form-group">
				    <input type="text" class="form-control" id="last" placeholder="Last Name">
				  </div>
				  <div class="form-group">
				    <input type="email" class="form-control" id="email" placeholder="Email: name@example.com">
				  </div>
				  <div class="form-group">
				    <input type="text" class="form-control" id="phone" placeholder="Phone">
				  </div>
				  <div class="form-group">
				    <input type="text" class="form-control" id="city" placeholder="City">
				  </div>				  
				  <div class="form-group">
					  <form>
					    <input id="language-select" list="languages" name="browser" placeholder="Language you'd like to teach">
					    <datalist id="languages">
					      <option value="English">
					      <option value="Turkish">
					      <option value="German">
					      <option value="Japanese">
					      <option value="Italian">
					      <option value="Spanish">
					      <option value="French">
					    </datalist>
					  </form>
				  </div>
				  <div class="submit-application">
				  	  <button type="submit" class="btn btn-lg btn-apply">Submit</button>	  	
				  </div>	  
				</form>	
			</div>  			
  		</div>
  	</div>
</div>
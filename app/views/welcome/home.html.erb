<div class="home-header">
  <div class="navbar navbar-fixed-top navbar-default" role="navigation" >
      <div class="container-fluid">
        <div class="navbar-header">
          <button data-toggle="collapse-side" data-target=".side-collapse" data-target-2=".side-collapse-container" type="button" class="navbar-toggle pull-left">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" id="nav-brand" href="#">TutorsApp </a>
        </div>
        <div class="side-collapse in">
          <nav role="navigation" class="navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="#">How It Works</a></li>
              <li><a href="#">Become a Tutor</a></li>
              <% if(!user_signed_in?) %>
                <li><a href="#" data-toggle="modal" data-target="#ModalLogin" >Login</a></li>
                <li><a href="#"  data-toggle="modal" data-target="#ModalSignUp" >Sign Up</a></li>
              <% else %>
                <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
  </div>

    <!-- Modal -->
  <div id="ModalLogin" class="auth-modal modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div id="social">
          <%= link_to "Log In with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %>
          <%= link_to "Log In with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-success" %>
        </div>  


        <div class="modal-body">
          <p>OR</p>
          <%= link_to "Log In with Email", new_user_session_path, class: 'btn btn-success' %>
        </div>

      </div>

    </div>
  </div>

  <div id="ModalSignUp" class="auth-modal modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div id="social">
          <%= link_to "Sign Up with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %>
          <%= link_to "Sign Up with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-success" %>
        </div>  


        <div class="modal-body">
          <p>OR</p>
          <%= link_to "Sign Up with Email", new_user_registration_path, class: 'btn btn-primary' %>
        </div>

      </div>

    </div>
  </div>  

  <div class="carousel fade" data-ride="carousel" id="featured">
    <div class="carousel-inner fullheight">
      <div class="item"><%= image_tag "bg1.jpg"  %></div>  
      <div class="item"><%= image_tag "bg2.jpg"  %></div>  
      <div class="item"><%= image_tag "bg3.jpg"  %></div> 
      <div class="item"><%= image_tag "bg4.jpg"  %></div>       
    </div><!-- carousel-inner -->
    <h1 class="container">WHICH LANGUAGE WOULD YOU LIKE TO LEARN?</h1>
    <h2 class="container">Find local language tutors in any city in the world at affordable prices</h2>
  </div><!-- featured carousel -->


  <div class="form-container">
    <div class="well well-lg col-md-6 col-md-offset-3 hidden-xs">
      <form class="form-inline" id="testform">
        <div class="form-group">
          <label class="sr-only" for="language">Language</label>
          <input type="text" class="form-control" id="language" placeholder="Enter a Language">
        </div>
        <div class="form-group">
          <label class="sr-only" for="location">Location</label>
          <input type="text" class="form-control" id="location" placeholder="Select your city">
        </div>
        <button type="submit" class="btn btn-default btn-success">Search Tutors</button>
      </form>
    </div>
  </div>
  <div class="btn-group visible-xs">
    <div class="xs-buttons">
      <button type="button" class="btn btn-default language-button">Select a Language</button>
      <button class="btn btn-default search-button" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
  </div>
</div>


<div class="row1">
  <div class="container">
    <h2>How It Works</h2>
  </div>
</div>
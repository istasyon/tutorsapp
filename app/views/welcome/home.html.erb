<div id="home-header" class="home-header">
  <div class="navbar navbar-fixed-top navbar-default" role="navigation" >
    <div class="container-fluid">
      <div class="navbar-header">
        <button data-toggle="collapse-side" data-target=".side-collapse" data-target-2=".side-collapse-container" type="button" class="navbar-toggle pull-left">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" id="nav-brand" href="#">TUTORS</a>
      </div>
      <div id="side-menu" class="side-collapse in">
        <nav role="navigation" class="navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">How It Works</a></li>
            <li><a href="#">Become a Tutor</a></li>
            <% if(!user_signed_in?) %>
              <li><a href="#"  data-toggle="modal" data-target="#ModalSignUp" >Sign Up</a></li>
              <li><a href="#" data-toggle="modal" data-target="#ModalLogin" >Login</a></li>
            <% else %>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div> <!-- navbar-fixed-top -->

    <!-- Modal -->
  <div id="ModalLogin" class="auth-modal modal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="social-buttons">
          <%= link_to '<i class="fa fa-facebook"></i> Log In with Facebook'.html_safe, user_omniauth_authorize_path(:facebook), class: "btn btn-large btn-facebook" %>
          <%= link_to '<i class="fa fa-google-plus"></i> Log In with Google'.html_safe, user_omniauth_authorize_path(:google_oauth2), class: "btn btn-large btn-google" %>
        </div>  


        <div class="modal-body">
          <div class="or-seperator">
            <span>or</span>
          </div>

          <%= form_for(:user, :url => session_path(:user)) do |f| %>
            <div class="email-row">
              <%= f.text_field :email, class: 'form-control', placeholder: 'Email Address' %>
            </div>
            <div class="password-row">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            </div>
            <%= f.submit 'Log In', class: 'btn btn-default btn-login' %>
          <% end %>
          <div class="login-switch">
            <span class="">Donâ€™t have an account?</span>
            <a data-dismiss="modal" data-toggle="modal" href="#" data-target="#ModalSignUp" >Sign Up</a> 
          </div>        
        </div>
        <a href="#" class="modal-close" data-dismiss="modal">X</a>
      </div>
    </div>
  </div>  <!-- ModalLogin -->

  <div id="ModalSignUp" class="auth-modal modal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="social-buttons">
          <%= link_to '<i class="fa fa-facebook"></i> Sign Up with Facebook'.html_safe, user_omniauth_authorize_path(:facebook), class: "btn btn-large btn-facebook" %>
          <%= link_to '<i class="fa fa-google-plus"></i> Sign Up with Google'.html_safe, user_omniauth_authorize_path(:google_oauth2), class: "btn btn-large btn-google" %>
        </div>  
        <div class="modal-body">
          <div class="or-seperator">
            <span>or</span>
          </div>
          <%= form_for(:user, :url => registration_path(:user)) do |f| %>
              <div class="email-row">
                <%= f.text_field :email, class: 'form-control', placeholder: 'Email Address' %>
              </div>
              <div class="password-row">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
              </div>
              <div class="password-row password-confirm">
                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
              </div>
              <%= f.submit 'Sign Up', class: 'btn btn-default btn-signup' %>
          <% end %>
          <div class="login-switch">
            <span class="">Already a member?</span>
            <a data-dismiss="modal" data-toggle="modal" href="#" data-target="#ModalLogin" >Login In</a> 
          </div>
        </div>
        <a href="#" class="modal-close" data-dismiss="modal">X</a>
      </div>
    </div>
  </div>  <!-- ModalSignUp -->

  <div class="carousel fade" data-ride="carousel" id="featured">
    <div class="carousel-inner fullheight">
      <div class="item"><%= image_tag "bg1.jpg"  %></div>    
      <div class="item"><%= image_tag "bg3.jpg"  %></div> 
      <div class="item"><%= image_tag "bg4.jpg"  %></div>       
    </div><!-- carousel-inner -->
    <h1 class="container">WHICH LANGUAGE WOULD YOU LIKE TO LEARN?</h1>
    <h2 class="container">Find local and online language tutors at affordable prices</h2>
  </div><!-- featured carousel -->


  <div class="form-container">
    <div class="well well-lg col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 hidden-xs">
      <form class="form-inline" id="testform">
        <div class="form-group">
          <label class="sr-only" for="language">Language</label>
          <input type="text" class="form-control" id="language" placeholder="Enter a Language">
        </div>
        <div class="form-group">
          <label class="sr-only" for="location">Location</label>
          <input type="text" class="form-control" id="location" placeholder="Select your city">
        </div>
        <button type="submit" class="btn btn-default btn-success">Search Tutors</button>
      </form>
    </div>
  </div>
  <div class="btn-group visible-xs">
    <div class="xs-buttons">
      <button type="button" class="btn btn-default language-button">Select a Language</button>
      <button class="btn btn-default search-button" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
  </div>
</div> <!-- home-header -->



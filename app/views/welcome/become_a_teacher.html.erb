<div id="teacher-application-container">
  	<div class="main">
  		<div class="layout-top">
	  		<div class="teacher-application-text">
	  			<h1>WE NEED TEACHERS LIKE YOU</h1>
	  			<p>Illo officiis necessitatibus mollitia reprehenderit consequuntur quia!</p>
	  		</div>
	  		<div class="teacher-registration-form-container">
	  			<%= form_for(:user, url: registration_path(:user), html: { method: :put }, id: "application") do |f| %>
				  <div class="form-group">
				  	<%= f.text_field :first_name, class: "form-control", id: "first", placeholder: "First Name" %>
				  </div>
				  <div class="form-group">
				    <%= f.text_field :last_name, class: "form-control", id: "last", placeholder: "Last Name" %>
				  </div>
				  <div class="form-group">
				    <%= f.text_field :location, class: "form-control", id: "location", placeholder: "Location" %>
				  </div>				  
				  <div class="submit-application">
				  	  <%= f.submit "Submit", class: "btn btn-lg btn-apply" %>  	
				  </div>	  
	  			<% end %>
			</div>  			
  		</div>
  	</div>
</div>